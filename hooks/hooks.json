{
  "hooks": [
    {
      "event": "SessionStart",
      "type": "command",
      "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session/on-start.js"
    },
    {
      "event": "UserPromptSubmit",
      "type": "command",
      "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/prompt/on-submit.js"
    },
    {
      "event": "PreToolUse",
      "type": "command",
      "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tool/pre-task.js",
      "matcher": "Task"
    },
    {
      "event": "SubagentStop",
      "type": "command",
      "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/agent/on-stop.js"
    },
    {
      "event": "PostToolUse",
      "type": "command",
      "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/tool/post-use.js"
    },
    {
      "event": "Stop",
      "type": "command",
      "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session/on-stop.js"
    }
  ]
}
